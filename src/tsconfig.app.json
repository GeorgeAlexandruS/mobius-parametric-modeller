{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": [],
    "paths": {
      "@assets/*" : ["assets/*"],
      "@libs/*" : ["libs/*"],
      "@store" : ["app/core/store"],
      "@models/*" : ["app/shared/models/*"],
      "@utils" : ["app/shared/utils"],
      "@shared/*" : ["app/shared/*"],
      "@views" : ["app/views"],
      "@services" : ["app/core/services"],
      "@modules" : ["app/core/modules"],
      "@libs": ["libs"],
      "@test" : ["app/views"]
    },
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
