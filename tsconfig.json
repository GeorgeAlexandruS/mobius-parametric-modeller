{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es5",
    "paths": {
      "@assets/*" : ["src/assets/*"],
      "@store" : ["src/app/core/store"],
      "@models/*" : ["src/app/shared/models/*"],
      "@utils" : ["src/app/shared/utils"],
      "@shared/*" : ["src/app/shared/*"],
      "@views" : ["src/app/views"],
      "@mviewers": ["src/app/mobius-viewer/viewers"],
      "@services" : ["src/app/core/services"],
      "@modules" : ["src/app/core/modules"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2015",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "src/app/core/*",
    "**/*.spec.ts"
  ]
}